{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/products/add": {
            "post": {
                "description": "Save new product into DynamoDb",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Add a Product item",
                "parameters": [
                    {
                        "description": "Product item to add",
                        "name": "entityBody",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/entities.ProductBody"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Successful response",
                        "schema": {
                            "$ref": "#/definitions/entities.ProductResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "entities.ProductBody": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                }
            }
        },
        "entities.ProductResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "statusCode": {
                    "type": "integer"
                }
            }
        }
    }
}